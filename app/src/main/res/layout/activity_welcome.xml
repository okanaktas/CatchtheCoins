<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/textViewHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Catch the  Coins"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChoose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Choose a coin to start the game"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/coin" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/shiba" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/polygon" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/ton" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/dollar" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="10dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/ethereum" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/usdt" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/trx" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="6dp"
                android:onClick="imageClick"
                app:srcCompat="@drawable/bitcoin" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="buttonHome"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="buttonSettings"
            app:srcCompat="@drawable/setting" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLastScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Last Score: 0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewHeader2"
        app:layout_constraintStart_toStartOf="@+id/textViewHeader2"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeader2" />

</androidx.constraintlayout.widget.ConstraintLayout>